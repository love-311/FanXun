<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/top_title"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_1"
            android:layout_width="match_parent"
            android:layout_height="80px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32px"
                android:text="网络委托"
                android:textSize="34px"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/iv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/not_choosed"
                android:layout_alignParentRight="true"
                android:layout_marginRight="32px"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <include layout="@layout/choose_item_1px"></include>
        <RelativeLayout
            android:id="@+id/rl_2"
            android:layout_width="match_parent"
            android:layout_height="80px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32px"
                android:text="电话"
                android:textSize="34px"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/iv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/not_choosed"
                android:layout_alignParentRight="true"
                android:layout_marginRight="32px"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <include layout="@layout/choose_item_1px"></include>
        <RelativeLayout
            android:id="@+id/rl_3"
            android:layout_width="match_parent"
            android:layout_height="80px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32px"
                android:text="朋友"
                android:textSize="34px"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/iv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/not_choosed"
                android:layout_alignParentRight="true"
                android:layout_marginRight="32px"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <include layout="@layout/choose_item_1px"></include>
        <RelativeLayout
            android:id="@+id/rl_4"
            android:layout_width="match_parent"
            android:layout_height="80px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32px"
                android:text="中介"
                android:textSize="34px"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/iv_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/not_choosed"
                android:layout_alignParentRight="true"
                android:layout_marginRight="32px"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <include layout="@layout/choose_item_1px"></include>
        <RelativeLayout
            android:id="@+id/rl_5"
            android:layout_width="match_parent"
            android:layout_height="80px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32px"
                android:text="其他"
                android:textSize="34px"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/iv_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/not_choosed"
                android:layout_alignParentRight="true"
                android:layout_marginRight="32px"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <include layout="@layout/choose_item_1px"></include>
        </LinearLayout>
</LinearLayout>