<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:background="#dd3539">
        <ImageView
            android:id="@+id/top_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/return_btn"
            android:layout_marginLeft="24px"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/top_mid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="我 的"
            android:textColor="#ffffff"
            android:textSize="40px" />
        <TextView
            android:id="@+id/top_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="保存"
            android:textColor="#ffffff"
            android:textSize="34px"
            android:layout_centerVertical="true"
            android:layout_marginRight="24px"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_1"
            android:layout_width="match_parent"
            android:layout_height="80px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32px"
                android:text="正常"
                android:textSize="34px"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/iv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/not_choosed"
                android:layout_alignParentRight="true"
                android:layout_marginRight="32px"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <include layout="@layout/choose_item_1px"></include>
        <RelativeLayout
            android:id="@+id/rl_2"
            android:layout_width="match_parent"
            android:layout_height="80px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32px"
                android:text="完成"
                android:textSize="34px"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/iv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/not_choosed"
                android:layout_alignParentRight="true"
                android:layout_marginRight="32px"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <include layout="@layout/choose_item_1px"></include>
        <RelativeLayout
            android:id="@+id/rl_3"
            android:layout_width="match_parent"
            android:layout_height="80px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32px"
                android:text="急需"
                android:textSize="34px"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/iv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/not_choosed"
                android:layout_alignParentRight="true"
                android:layout_marginRight="32px"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <include layout="@layout/choose_item_1px"></include>
        <RelativeLayout
            android:id="@+id/rl_4"
            android:layout_width="match_parent"
            android:layout_height="80px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32px"
                android:text="无效"
                android:textSize="34px"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/iv_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/not_choosed"
                android:layout_alignParentRight="true"
                android:layout_marginRight="32px"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <include layout="@layout/choose_item_1px"></include>
        <RelativeLayout
            android:id="@+id/rl_5"
            android:layout_width="match_parent"
            android:layout_height="80px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32px"
                android:text="暂缓"
                android:textSize="34px"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/iv_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/not_choosed"
                android:layout_alignParentRight="true"
                android:layout_marginRight="32px"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <include layout="@layout/choose_item_1px"></include>
    </LinearLayout>
</LinearLayout>