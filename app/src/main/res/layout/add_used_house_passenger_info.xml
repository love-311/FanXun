<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="#efeff7">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="24px"
            android:gravity="center_vertical"
            android:text="客户信息"
            android:textColor="#9c9a9c"
            android:textSize="34px" />
    </LinearLayout>
    <include layout="@layout/add_info_1px"></include>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24px"
            android:text="电话："
            android:textColor="#9c9a9c"
            android:textSize="34px" />

        <EditText
            android:id="@+id/et_1"
            android:layout_width="480px"
            android:layout_height="60px"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16px"
            android:layout_toRightOf="@+id/phone"
            android:background="@drawable/et"
            android:inputType="phone"
            android:textSize="28px"
            android:hint="多个电话用空格逗号分隔"
            android:textColorHint="#9c9a9c"
            android:maxLength="12"
            android:paddingLeft="10px"/>

        <ImageView
            android:id="@+id/iv_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="28px"
            android:background="@mipmap/icon" />
    </RelativeLayout>

    <include layout="@layout/add_info_1px"></include>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="#ffffff">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24px"
            android:text="姓名："
            android:textColor="#9c9a9c"
            android:textSize="34px" />

        <EditText
            android:id="@+id/et_2"
            android:layout_width="480px"
            android:layout_height="60px"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16px"
            android:layout_toRightOf="@+id/name"
            android:background="@drawable/et"
            android:maxLength="8"
            android:paddingLeft="10px"/>
    </RelativeLayout>

 <include layout="@layout/add_info_1px"></include>
    <RelativeLayout
        android:id="@+id/rl_address"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="#ffffff">

        <TextView
            android:id="@+id/adress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24px"
            android:text="地址："
            android:textColor="#9c9a9c"
            android:textSize="34px" />

        <EditText
            android:id="@+id/et_3"
            android:layout_width="480px"
            android:layout_height="60px"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16px"
            android:layout_toRightOf="@+id/adress"
            android:background="@drawable/et"
            android:maxLength="8"
            android:paddingLeft="10px"/>
    </RelativeLayout>

    <include layout="@layout/add_info_1px"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="24px"
            android:text="备注："
            android:textColor="#9c9a9c"
            android:textSize="34px" />

        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_marginLeft="24px"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="请完善客户个人信息等..."
                android:textSize="28px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="24px"
                android:src="@mipmap/next" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/add_info_1px"></include>
</LinearLayout>