                        android:layout_height="60px"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16px"
                        android:background="@drawable/et"
                        android:inputType="number"
                        android:maxLength="3"
                        android:paddingLeft="10px"
