<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.love311.www.fanxun.custom.CustomViewPager
        android:id="@+id/main_activity_pager"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1">

    </com.love311.www.fanxun.custom.CustomViewPager>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="96px"
    android:background="#ffffff">
    <android.support.design.widget.TabLayout
        android:id="@+id/bottom_tab"
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:fillViewport="false"
        app:tabMode="fixed"
        app:tabGravity="fill"
        android:layout_gravity="center_vertical"
        app:tabIndicatorHeight="0px"
        app:tabSelectedTextColor="#dd3539"
        app:tabTextColor="#d0d0d0"
        app:tabTextAppearance="@style/MyBottomTabLayoutTextAppearance">
    </android.support.design.widget.TabLayout>
</LinearLayout>
</LinearLayout>